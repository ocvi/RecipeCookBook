<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pozadina"
    android:orientation="vertical"
    android:layout_marginTop="55dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/pozadina_recipe_ingredient"
                android:weightSum="1">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/prikaz">

                    <com.example.kajza.kuharica.Font.ProbaFont
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Unesi novi recept!"
                        android:gravity="center"
                        android:layout_alignParentTop="true"
                        android:textStyle="bold"
                        android:layout_marginTop="35dp"
                        android:textSize="30sp"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="0px"
                    android:layout_height="0px"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ime"
                    android:layout_marginTop="15dp">


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:ems="10"
                        android:id="@+id/name_txt"
                        android:hint="Naziv recepta"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textColorHint="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:textSize="20sp"
                        android:textColor="@color/white" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/kategorija"
                    android:layout_marginTop="15dp">

                    <com.example.kajza.kuharica.Font.ProbaFont
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:layout_alignParentLeft ="true"
                            android:layout_marginTop="28dp"
                            android:id="@+id/cat_txt"
                            android:text="Kategorija recepta:"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:layout_width="180dp" />

                    <Spinner
                        android:id="@+id/cat_spinner"
                        android:layout_width="116dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="37dp"
                        android:layout_marginEnd="37dp"
                        android:layout_alignTop="@+id/cat_txt"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        >

                    </Spinner>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/sastojci"
                    android:layout_marginTop="15dp">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:layout_marginTop="35dp"
                            android:id="@+id/ing_txt"
                            android:hint="Sastojci i koliÄina"
                            android:textColorHint="@color/white"
                        android:textSize="20sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/opis"
                    android:layout_marginTop="15dp">

                    <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName"
                            android:ems="10"
                            android:layout_centerVertical="true"
                            android:id="@+id/desc_txt"
                            android:hint="Vrijeme potrebno za izradu recepta"
                            android:textColorHint="@color/white"
                        android:textSize="20sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/instrukcije">

                    <EditText
                        android:id="@+id/inst_txt"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:lines="6"
                        android:scrollHorizontally="false"
                        android:hint="Instrukcije za izradu recepta"
                        android:textColorHint="@color/white"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:textSize="20sp"
                        android:paddingTop="20dp" />
                </RelativeLayout>

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/prikazSlike"
                    android:layout_marginBottom="25dp">

                <ImageView
                    app:srcCompat="@drawable/trans_logo_bijela"
                    android:id="@+id/iv_image"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
            </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/kamera">

                    <ImageButton
                        android:id="@+id/iv_camera"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="11dp"
                        style="@android:style/Widget.Holo.ImageButton"
                        android:background="@drawable/camera"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="100dp" />

                    <ImageButton
                        android:id="@+id/iv_gallery"
                        style="@android:style/Widget.Holo.ImageButton"
                        android:background="@android:drawable/ic_menu_gallery"
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="74dp"
                        android:layout_marginEnd="74dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/unesi"
                    android:gravity="center"
                    android:layout_weight="0.42"
                    android:layout_marginTop="55dp">


                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/unesi"
                        android:id="@+id/iv_upload"
                        android:background="@android:color/transparent" />
                </RelativeLayout>


            </LinearLayout>

        </ScrollView>
    </RelativeLayout>


</FrameLayout>
