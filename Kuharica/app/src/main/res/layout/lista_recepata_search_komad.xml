<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="4dp"
    android:orientation="vertical"
    android:background="@color/pozadina">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_image1"
        android:layout_width="200dp"
        android:layout_height="150dp"
        fresco:placeholderImage="@drawable/dog"
        fresco:failureImage="@drawable/ic_error"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="@color/white"
        android:id="@+id/nameTxt"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/my_image1"
        android:layout_toEndOf="@+id/my_image1"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="@color/white"
        android:id="@+id/categoryTxt"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/my_image1"
        android:layout_toEndOf="@+id/my_image1"/>



</RelativeLayout>